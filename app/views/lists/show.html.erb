
<div class="card mx-auto col-md-6">
  <div class="card-header">
    <h1 class="list-name"><%= @list.name %></h1>
  <%= cl_image_tag @list.photo.key, height: 150, width: 250, crop: :fill %>
  </div>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-horizontal">
      <div class="img-square-wrapper">
        <%= image_tag bookmark.movie.poster_url, width: 150,height: 150%>
      </div>
      <div class="card-body">
        <h4 class="card-title"><%= bookmark.movie.title %></h2>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <h3 class="card-text">Comments - </h3>
        <p class="card-text"><%= bookmark.comment %></p>
        <%= render "delete", bookmark: bookmark %>
      </div>
    </div>
    <% end %>
  <div class="card-footer d-block-inline">
    <%= link_to "Add bookmark", new_list_bookmark_path(@list),
                           class: "btn btn-primary col-4"%>
    <h2><%= link_to "Back", lists_path, class: "btn btn-warning col-4" %></h2>
  </div>
</div>
